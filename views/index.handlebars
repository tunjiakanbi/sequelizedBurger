<div class="container">
    <div class="row">
        <div class="jumbotron">
            <h1>...burgers!</h1>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-12">

            <h2>Burgers that are not devoured!</h2>
            <hr>
            <ul>
                {{#each burgers}} {{#unless this.devoured}}
                <button type="submit" data-id={{this.id}} class='burgerAvailable btn btn-primary'> {{this.burger_name}}</button>
                {{/unless}} {{/each}}
            </ul>
            <hr>
            <h2> Burgers Devoured</h2>
            {{#each burgers}} {{#if this.devoured}}
            <li class="list-group-item">
                {{this.burger_name}} {{/if}} {{/each}}

                <h2>Add a Burger</h2>
                <form class="create-form">

                    <div class="form-group">
                        <label for="burger">Burger Name:</label>
                        <input type="text" id="burger" name="name">
                    </div>

                    {{!--
                    <div class="form-group">
                        <label for="devour">Devoured?</label>
                        <br>
                        <input type="radio" name="devour" value="1" Devoured!<br>
                        <input type="radio" name="devour" value="0"> Not Devoured!
                    </div> --}}

                    <button id="addburger" type="button" class="btn btn-primary">Add Burger</button>
                </form>
        </div>
    </div>
</div>